<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.chainsave.upload.dao.UserFileMapper">
    <sql id="selectFields">
        id,user_id,file_name,file_hash,file_detail,status,create_time
    </sql>
    <sql id="insertFields">
        user_id,file_name,file_hash,file_detail,status,create_time
    </sql>
    <select id="selectUserFiles" resultType="UserFile">
        select <include refid="selectFields"/>
        from user_file
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
        order by status desc ,create_time desc
        limit #{offset},#{limit}
    </select>
    <select id="selectUserFileRows" resultType="int">
        select count(id)
        from user_file
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
    </select>
    <insert id="insertUserFile" parameterType="UserFile">
        insert into user_file(<include refid="insertFields"></include>)
        values (#{userId},#{fileName},#{fileHash},#{fileDetail},#{status},#{createTime})
    </insert>
    <select id="selectUserFileById" resultType="UserFile">
        select <include refid="selectFields"/>
        from user_file
        where id=#{id}
    </select>
</mapper>